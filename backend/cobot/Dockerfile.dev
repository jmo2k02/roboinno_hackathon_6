FROM python:3.12-slim

WORKDIR /app

# Copy project files
COPY pyproject.toml uv.lock ./
COPY README.md ./

# Install dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir .

# Expose the port FastAPI will run on
EXPOSE 8000

ENTRYPOINT ["python", "-m", "cobot"]